{% extends "ChateaClientBundle::layout.html.twig" %}
{% block body %}
    <h1>entity.name</h1>

    <form action="{{ path('antwebes_chateaclient_user_update', { 'user_id': entity.id }) }}" method="POST" >
        {{ form_widget(edit_form) }}
        <input type="hidden" name="_method" value="PATCH" />
        <p>
            <button class="boton" type="submit">Guardar cambios</button>
        </p>
    </form>
    <ul class="record_actions">
        <li>
            <a href="{{ path('antwebes_chateaclient_user_show_all') }}" title="Show all list">
                << GOTO List
            </a>
        </li>
        <li>
            <a href="{{ path('antwebes_chateaclient_user_delete', {'user_id': entity.id}) }}" title="Delete {{entity }}">
                Delete
            </a>
        </li>
    </ul>
{% endblock %}