{% extends "ChateaClientBundle::mainLayout.html.twig" %}

{% trans_default_domain 'UserRegistration' %}

{% block chatea_title %}{{ 'user.edit_profile' | trans }}{% endblock %}
{% block chatea_meta_description %}{% endblock %}
{% block chatea_meta_keywords %}{% endblock %}

{% block chatea_body %}
	<div class="row">
		<div class="col-xs-12">
			<h1>{{ 'user.change_profile' | trans }}</h1>
			<div class="col-xs-12 text-center">
				<div class="col-xs-12">
		  			<a class="btn btn-lg btn-primary" href="{{ path('chatea_client_update_profile') }}" data-behat="edit_profile">
                        {{ 'user.edit_profile' | trans }}
                        {% if user.profile is null or user.profile | isProfileEmpty %}
                            &nbsp;<i class="fa fa-warning faa-flash animated" title="{{ 'user.profile_not_complete' | trans({}, 'Notifications') }}"></i>
                        {% endif %}
                    </a>
	  			</div>
                <br>
                <div class="col-xs-12">
                    <a class="btn btn-lg btn-primary" data-behat="update-profile-photo" href="{{ path('chatea_client_update_profile_photo') }}">
                        {{ 'user.edit_profile_photo' | trans }}
                        {% if user.profile is null or user.profile.profilePhoto is null %}
                            &nbsp;<i class="fa fa-warning faa-flash animated" title="{{ 'user.no_profile_photo' | trans({}, 'Notifications') }}"></i>
                        {% endif %}
                    </a>
                </div>
                <br>
                <div class="col-xs-12">
                    <a class="btn btn-lg btn-primary" data-behat="update-city" href="{{ path('chatea_client_update_profile_city') }}">
                       <i class="fa fa-map-marker"></i> {{ 'user.edit_city' | trans({}, 'UserChange') }}
                        {% if user.city is null %}
                            &nbsp;<i class="fa fa-warning faa-flash animated" title="{{ 'user.no_city' | trans({}, 'Notifications') }}"></i>
                        {% endif %}
                    </a>
                </div>

			</div>
		</div>
	</div>
{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet" />
    {% stylesheets
    "@ChateaClientBundle/Resources/public/css/font-awesome-animation.min.css"
    %}
    <link href="{{ asset(asset_url) }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock head_css %}