<?xml version="1.0" encoding="UTF-8" ?>
 <routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="login_auth" pattern="/auth">
        <default key="_controller">ChateaClientBundle:Security:login</default>
    </route>	    
    <route id="login" pattern="/auth/login">
        <default key="_controller">ChateaClientBundle:Security:login</default>
    </route>   
    <route id="logout" pattern="/api/logout" />     
    <route id="antwebes_chateaclient_doc" pattern="/doc" methods="GET" schemes="HTTP">
        <default key="_controller">ChateaClientBundle:Api:index</default>
    </route>      
    <route id="antwebes_chateaclient_doc2" pattern="/doc/" methods="GET" schemes="HTTP">
        <default key="_controller">ChateaClientBundle:Api:index</default>
    </route>     
    
    <route id="login_check" pattern="/api/login_check" />

	<import resource="@ChateaClientBundle/Resources/config/routing/api.xml" prefix="/api" />        
</routes>
