<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="antwebes_chateaclient_lib.client.class">Ant\ChateaClient\Http\HttpClient</parameter>
        <parameter key="antwebes_chateaclient_lib.api.class">Ant\ChateaClient\Client\Api</parameter>
        <parameter key="antwebes_chateaclient_bundle.api_manager.class">Ant\Bundle\ChateaClientBundle\Api\Manager\ApiManager</parameter>
        <parameter key="antwebes_chateaclient_bundle.api_filter.class">Ant\Bundle\ChateaClientBundle\Repositories\FilterCollection</parameter>
        <parameter key="antwebes_chateaclient_bundle.api_filter_channeltype.class">Ant\Bundle\ChateaClientBundle\Repositories\FilterChannelType</parameter>
        <parameter key="antwebes_chateaclient_bundle.api_filter_page.class">Ant\Bundle\ChateaClientBundle\Repositories\FilterPage</parameter>
    </parameters>
    <services>

        <service id="antwebes_chateaclient_lib.client" class="%antwebes_chateaclient_lib.client.class%" public="false">
            <argument type="string" />
            <argument type="string">OTk5MmI0MDk3NGFiMTM4NTBlMzk5OWZlYWM4N2Q5NTlhYTZlOTgwNzUzYmVjYzcxOTI5OGZmZTM2MTQ1MDI4OQ</argument>
        </service>

        <service id="antwebes_chateaclient_bundle.api_manager" class="%antwebes_chateaclient_bundle.api_manager.class%" public="false">
            <argument type="service" id="antwebes_chateaclient_lib.client" />
        </service>
        <!-- API FILTERS -->
        <service id="antwebes_chateaclient_bundle.api_filter_channel_type" public="false" class="antwebes_chateaclient_bundle.api_filter_channeltype.class" />

        <service id="antwebes_chateaclient_bundle.api_filter" class="antwebes_chateaclient_bundle.api_filter.class" public="false">
            <call method="add">
                <argument type="service" id="antwebes_chateaclient_bundle.api_filter_channel_type" />
            </call>
            <call method="add">
                <argument type="service" id="antwebes_chateaclient_bundle.api_filter_channel_type" />
            </call>
        </service>
        <service id="antwebes_client" alias="antwebes_chateaclient_lib.client" synthetic="true" />
        <service id="antwebes_api"    alias="antwebes_chateaclient_bundle.api_manager"    synthetic="true" />
    </services>
</container>
