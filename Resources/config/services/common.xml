<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="antwebes_chateaclient_lib.client.class">Guzzle\Service\Client</parameter>
        <parameter key="antwebes_chateaclient_lib.factory_client.class">Ant\ChateaClient\Service\Client\ChateaGratisClient</parameter>
        <parameter key="antwebes_chateaclient_lib.factory_client_auth.class">Ant\ChateaClient\Service\Client\ChateaOAuth2Client</parameter>
        <parameter key="antwebes_chateaclient_lib.api.class">Ant\ChateaClient\Client\Api</parameter>
        <parameter key="antwebes_chateaclient_bundle.api_manager.class">Ant\Bundle\ChateaClientBundle\Api\Persistence\ApiManager</parameter>

    </parameters>
    <services>

        <service id="antwebes_chateaclient_lib.client"
                 class="%antwebes_chateaclient_lib.client.class%"
                 factory-class="%antwebes_chateaclient_lib.factory_client.class%"
                 factory-method="factory"
                 public="false">
            <argument type="collection">
                <argument key="access_token">access-token-demo</argument>
                <argument key="environment">dev</argument>
            </argument>
        </service>

        <service id="antwebes_chateaclient_lib.client_auth"
                 class="%antwebes_chateaclient_lib.client.class%"
                 factory-class="%antwebes_chateaclient_lib.factory_client_auth.class%"
                 factory-method="factory"
                 public="false">
            <argument type="collection">
                <argument key="environment">dev</argument>
            </argument>
        </service>

        <service id="antwebes_chateaclient_bundle.api_manager" class="%antwebes_chateaclient_bundle.api_manager.class%" public="false">
            <argument type="service" id="antwebes_chateaclient_lib.client" />
        </service>

        <!-- API FILTERS -->
        <service id="antwebes_chateaclient_bundle.api_filter" class="antwebes_chateaclient_bundle.api_filter.class" public="false">
            <call method="add"><argument type="service" id="antwebes_chateaclient_bundle.api_filter_channel_type" /></call>
        </service>

        <service id="antwebes_client" alias="antwebes_chateaclient_lib.client" synthetic="true" />
        <service id="antwebes_api"    alias="antwebes_chateaclient_bundle.api_manager"    synthetic="true" />
    </services>
</container>
