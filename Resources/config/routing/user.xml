<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <!-- User CRUD -->
    <route id="antwebes_chateaclient_user_show_all" pattern="/users" methods="GET">
        <default key="_controller">ChateaClientBundle:User:index</default>
    </route>
    <route id="antwebes_chateaclient_user_show_all_s" pattern="/user" methods="GET">
        <default key="_controller">ChateaClientBundle:User:index</default>
    </route>
    <route id="antwebes_chateaclient_user_add" pattern="/user/new" methods="GET">
        <default key="_controller">ChateaClientBundle:User:new</default>
        <requirement key="user_id">\d+</requirement>
    </route>
    <route id="antwebes_chateaclient_user_register" pattern="/user/new" methods="GET">
        <default key="_controller">ChateaClientBundle:User:register</default>
        <requirement key="user_id">\d+</requirement>
    </route>
    <route id="antwebes_chateaclient_user_create" pattern="/user/new" methods="PATH">
        <default key="_controller">ChateaClientBundle:User:create</default>
        <requirement key="user_id">\d+</requirement>
    </route>
    <route id="antwebes_chateaclient_user_show" pattern="/user/{user_id}" methods="GET">
        <default key="_controller">ChateaClientBundle:User:show</default>
    </route>
    <route id="antwebes_chateaclient_user_edit" pattern="/user/edit/{user_id}" methods="GET">
        <default key="_controller">ChateaClientBundle:User:edit</default>
        <requirement key="user_id">\d+</requirement>
    </route>
    <route id="antwebes_chateaclient_user_update" pattern="/user/update/{user_id}" methods="PATCH">
        <default key="_controller">ChateaClientBundle:User:update</default>
        <requirement key="user_id">\d+</requirement>
    </route>

    <route id="antwebes_chateaclient_user_delete" pattern="/delete/{user_id}" methods="GET">
        <default key="_controller">ChateaClientBundle:User:delete</default>
    </route>

    <!-- ME -->
    <route id="antwebes_chateaclient_user_whoami" pattern="/whoami" methods="GET"  schemes="HTTP">
        <default key="_controller">ChateaClientBundle:User:whoami</default>
    </route>
    <route id="antwebes_chateaclient_user_me" pattern="/me" methods="GET"  schemes="HTTP">
        <default key="_controller">ChateaClientBundle:User:whoami</default>
    </route>

    <route id="antwebes_chateaclient_user_show_blocked_user" pattern="/user/{user_id}/blocked" methods="GET">
        <default key="_controller">ChateaClientBundle:User:showBlockedUser</default>
        <requirement key="user_id">\d+</requirement>
    </route>
    <route id="antwebes_chateaclient_user_add_blocked_user" pattern="/user/{user_id}/blocked" methods="POST">
        <default key="_controller">ChateaClientBundle:User:addBlockedUser</default>
        <requirement key="user_id">\d+</requirement>
    </route>
    <route id="antwebes_chateaclient_user_del_blocked_user" pattern="/user/{user_id}/blocked/{blocked_user_id}" methods="DELETE">
        <default key="_controller">ChateaClientBundle:User:delBlockedUser</default>
        <requirement key="user_id">\d+</requirement>
    </route>
</routes>